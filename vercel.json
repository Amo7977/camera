{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/send-message",
        "dest": "server.js"
      },
      {
        "src": "/send-image",
        "dest": "server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/public/index.html"
      }
    ]
}
